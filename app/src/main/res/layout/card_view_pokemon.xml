<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/eevee"/>

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eevee_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pokemon_image"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: "
            android:layout_below="@+id/pokemon_name"
            android:layout_toRightOf="@+id/pokemon_image"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/pokemon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eevee_type"
            android:layout_below="@+id/pokemon_name"
            android:layout_toRightOf="@+id/type"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/shiny_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/stars"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>